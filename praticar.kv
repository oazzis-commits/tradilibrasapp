<TelaPergunta>:
    FloatLayout:
        MDLabel:
            id: pergunta_texto
            text: "Pergunta aparecerá aqui"
            font_style: "H5"
            halign: "center"
            size_hint: 0.9, 0.1
            pos_hint: {"center_x": 0.5, "top": 0.9}

        Video:
            id: video_pergunta
            source: ""
            options: {"eos": "loop"}  # para repetir o vídeo
            state: "stop"
            size_hint: 0.8, 0.4
            pos_hint: {"center_x": 0.5, "top": 0.75}

        BoxLayout:
            id: alternativas_box
            orientation: "vertical"
            spacing: 15
            size_hint: 1, 0.25
            pos_hint: {"center_x": 1.35, "y": 0.35}

        BoxLayout:
            orientation: "horizontal"
            size_hint: 0.35, 0.08
            pos_hint: {"right": 0.98, "y": 0.02}
            spacing: 10

            Button:
                text: " "
                size_hint: None, None
                size: 90, 90
                pos_hint: {'right': 1, 'y': 0}  # aqui você ajusta X e Y
                background_normal: "imagens/iconhomepage.png"
                background_down: "imagens/fundobotoes_pressed.png"
                border: (0,0,0,0)
                on_release: app.mudar_tela('principal')
            Button:
                text: " "
                size_hint: None, None
                size: 90, 90
                pos_hint: {'right': 0.9, 'y': 0}
                background_normal: "imagens/iconvoltar.png"
                background_down: "imagens/fundobotoes_pressed.png"
                border: (0,0,0,0)
                on_release: app.voltar_tela()

<TelaRelatorio>:
    name: "relatorio"
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "20dp"

        MDLabel:
            id: resultado_texto
            text: "Relatório final"
            halign: "center"

        MDRaisedButton:
            text: "Reiniciar"
            pos_hint: {"center_x": .5}
            on_release:
                app.reiniciar()