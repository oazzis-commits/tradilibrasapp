<TelaTextinf>:
    MeuLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "imagens/fundotudo.png"
        Widget:
            size_hint: 0.78, 1   # ocupa tanana da tela
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: 0.945, 0.925, 0.902, 0.6  # cor f1ece6 com 60% transparência
                Rectangle:
                    pos: self.pos
                    size: self.size

    FloatLayout:
        Label:
            text: "[b]O que é Libras?[/b]"
            markup: True
            id: oqeinf
            font_size: 40
            pos_hint: {'x': 0.05, 'y': 0.36}
            size_hint: .9, .6
            valign: 'top'
            text_size: self.size

        Label:
            text: "[b]Textos informativos[/b]"
            markup: True
            id: titextinf
            font_size: 30
            pos_hint: {'x': 0.05, 'y': 0.82}
            size_hint: .9, .6
            text_size: self.size

        Button:
            text: " "
            size_hint: None, None
            size: 90, 90
            pos_hint: {'right': 1, 'y': 0}  # aqui você ajusta X e Y
            background_normal: "imagens/iconhomepage.png"
            background_down: "imagens/fundobotoes_pressed.png"
            border: (0,0,0,0)
            on_release: app.mudar_tela('principal')

        Button:
            text: " "
            size_hint: None, None
            size: 90, 90
            pos_hint: {'right': 0.9, 'y': 0}
            background_normal: "imagens/iconvoltar.png"
            background_down: "imagens/fundobotoes_pressed.png"
            border: (0,0,0,0)
            on_release: app.voltar_tela()

        GridLayout:
            cols: 1
            spacing: 10
            size_hint: .8, None
            height: self.minimum_height
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            Button:
                text: "História da Libras"
                font_size: 18
                id: texto1
                size_hint: .8, None
                height: 50
                background_normal: "imagens/fundobotoes.png"
                background_down: "imagens/fundobotoes_pressed.png"
                color: 1,1,1,1
                on_release: app.mostrar_texto_especifico("História da Libras")

            Button:
                text: "A Comunidade Surda na Arte"
                font_size: 18
                id: texto2
                size_hint: .8, None
                height: 50
                background_normal: "imagens/fundobotoes.png"
                background_down: "imagens/fundobotoes_pressed.png"
                color: 1,1,1,1
                on_release: app.mostrar_texto_especifico("A Comunidade Surda na Arte")

            Button:
                text: "A Identidade Cultural da Comunidade Surda"
                font_size: 18
                id: texto3
                size_hint: .8, None
                height: 50
                background_normal: "imagens/fundobotoes.png"
                background_down: "imagens/fundobotoes_pressed.png"
                color: 1,1,1,1
                on_release: app.mostrar_texto_especifico("A Identidade Cultural da Comunidade Surda")

            Button:
                text: "Regionalismo na Língua Brasileira de Sinais"
                font_size: 18
                id: texto4
                size_hint: .8, None
                height: 50
                background_normal: "imagens/fundobotoes.png"
                background_down: "imagens/fundobotoes_pressed.png"
                color: 1,1,1,1
                on_release: app.mostrar_texto_especifico("Regionalismo na Língua Brasileira de Sinais")
            Button:
                text: "A Organização Sintática da língua Brasileira de Sinais"
                font_size: 18
                id: texto5
                size_hint: .8, None
                height: 50
                background_normal: "imagens/fundobotoes.png"
                background_down: "imagens/fundobotoes_pressed.png"
                color: 1,1,1,1
                on_release: app.mostrar_texto_especifico("A Organização Sintática da língua Brasileira de Sinais")

