<TelaVidAula>:
    MeuLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "imagens/fundotudo.png"
        Widget:
            size_hint: 0.78, 1   # ocupa tanana da tela
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas.before:
                Color:
                    rgba: 0.945, 0.925, 0.902, 0.6  # cor f1ece6 com 60% transparência
                Rectangle:
                    pos: self.pos
                    size: self.size

    FloatLayout:
        Label:
            text: "[b]O que é Libras?[/b]"
            markup: True
            id: oqevid
            font_size: 40
            pos_hint: {'x': 0.05, 'y': 0.36}
            size_hint: .9, .6
            valign: 'top'
            text_size: self.size

        Label:
            text: "[b]Videoaulas[/b]"
            markup: True
            id: titvideoaulas
            font_size: 30
            pos_hint: {'x': 0.05, 'y': 0.82}
            size_hint: .9, .6
            text_size: self.size

        Button:
            text: " "
            size_hint: None, None
            size: 90, 90
            pos_hint: {'right': 1, 'y': 0}  # aqui você ajusta X e Y
            background_normal: "imagens/iconhomepage.png"
            background_down: "imagens/fundobotoes_pressed.png"
            border: (0,0,0,0)
            on_release: app.mudar_tela('principal')

        Button:
            text: " "
            size_hint: None, None
            size: 90, 90
            pos_hint: {'right': 0.9, 'y': 0}
            background_normal: "imagens/iconvoltar.png"
            background_down: "imagens/fundobotoes_pressed.png"
            border: (0,0,0,0)
            on_release: app.voltar_tela()

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10
            size_hint: None, None
            width: 500
            height: 400
            pos_hint: {'x': 0.22, 'center_y': 0.38}

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: None
                height: 250
                Button:
                    text: " "
                    size_hint_x: None
                    width: 400
                    height: 50
                    background_normal: "imagens/thumbalfabeto.png"
                    background_down: "imagens/fundobotoes_pressed.png"
                    color: 1,1,1,1
                    on_release: app.mostrar_videoaula("videoalfabeto")
                Button:
                    text: " "
                    size_hint_x: None
                    width: 400
                    height: 50
                    background_normal: "imagens/thumbsaudacoes.png"
                    background_down: "imagens/fundobotoes_pressed.png"
                    color: 1,1,1,1
                    on_release: app.mostrar_videoaula("videosaudacoes")

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10
                size_hint_y: None
                height: 250
                Button:
                    text: " "
                    id: video3
                    size_hint_x: None
                    width: 400
                    height: 50
                    font_size: 18
                    background_normal: "imagens/thumbverbos.png"
                    background_down: "imagens/fundobotoes_pressed.png"
                    color: 1,1,1,1
                    on_release: app.mostrar_videoaula("videoverbos")
                Button:
                    text: " "
                    id: video4
                    size_hint_x: None
                    width: 400
                    height: 50
                    font_size: 18
                    background_normal: "imagens/thumbcores.png"
                    background_down: "imagens/fundobotoes_pressed.png"
                    color: 1,1,1,1
                    on_release: app.mostrar_videoaula("videocores")

